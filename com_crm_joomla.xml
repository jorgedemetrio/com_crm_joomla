<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
    <name>com_crm_joomla</name>
    <creationDate>2024-07-29</creationDate>
    <author>Jules</author>
    <authorEmail>jules@example.com</authorEmail>
    <version>1.0.0</version>
    <description>COM_CRM_XML_DESCRIPTION</description>
    <namespace>Joomla\Component\Crm</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8mb4">administrator/sql/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <!-- Here would be the uninstall SQL file if needed -->
        </sql>
    </uninstall>

    <administration>
        <menu>COM_CRM_MENU_TITLE</menu>
        <submenu>
            <menu view="leadgroups" img="class:joomla-picture-in-picture">COM_CRM_SUBMENU_LEADGROUPS</menu>
            <menu view="leads" img="class:users">COM_CRM_SUBMENU_LEADS</menu>
            <menu view="campanhas" img="class:megaphone">COM_CRM_SUBMENU_CAMPANHAS</menu>
            <menu view="campanhalinks" img="class:link">COM_CRM_SUBMENU_CAMPANHALINKS</menu>
        </submenu>
        <files folder="administrator">
            <folder>controllers</folder>
            <folder>forms</folder>
            <folder>models</folder>
            <folder>models/forms</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <filename>access.xml</filename>
        </files>
        <languages folder="administrator/language">
            <language tag="en-GB">en-GB/en-GB.com_crm_joomla.ini</language>
            <language tag="pt-BR">pt-BR/pt-BR.com_crm_joomla.ini</language>
            <language tag="es-ES">es-ES/es-ES.com_crm_joomla.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.com_crm_joomla.ini</language>
            <language tag="de-DE">de-DE/de-DE.com_crm_joomla.ini</language>
            <language tag="it-IT">it-IT/it-IT.com_crm_joomla.ini</language>
            <language tag="ja-JP">ja-JP/ja-JP.com_crm_joomla.ini</language>
            <language tag="zh-CN">zh-CN/zh-CN.com_crm_joomla.ini</language>
        </languages>
    </administration>
</extension>

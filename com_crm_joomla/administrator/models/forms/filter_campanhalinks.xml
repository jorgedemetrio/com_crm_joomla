<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_CRM_FILTER_SEARCH_LABEL"
            hint="JSEARCH_FILTER"
        />
        <field
            name="state"
            type="status"
            label="JSTATUS"
            onchange="this.form.submit();"
            >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
        <field
            name="campanha_id"
            type="sql"
            label="COM_CRM_CAMPANHALINK_FIELD_CAMPANHA_ID_LABEL"
            query="SELECT id, nome FROM #__crm_campanhas WHERE state = 1 ORDER BY nome"
            key_field="id"
            value_field="nome"
            onchange="this.form.submit();"
            >
            <option value="">COM_CRM_CAMPANHALINKS_FILTER_CAMPANHA_OPTION_ALL</option>
        </field>
    </fields>
</form>

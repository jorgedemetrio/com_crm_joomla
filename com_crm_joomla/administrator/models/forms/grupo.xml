<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            class="readonly"
            default=""
            readonly="true"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_JOOMLA_GRUPOS_NOME_LABEL"
            description="COM_CRM_JOOMLA_GRUPOS_NOME_DESC"
            required="true"
            size="40"
            class="inputbox"
        />
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="form-select"
            size="1"
            default="1"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>

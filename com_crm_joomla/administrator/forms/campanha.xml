<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="id"
            type="hidden"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_CAMPANHA_NOME_LABEL"
            description="COM_CRM_CAMPANHA_NOME_DESC"
            required="true"
            size="40"
            class="inputbox"
        />
        <field
            name="status"
            type="list"
            label="COM_CRM_CAMPANHA_STATUS_LABEL"
            description="COM_CRM_CAMPANHA_STATUS_DESC"
            default="rascunho"
            >
            <option value="rascunho">COM_CRM_CAMPANHA_STATUS_RASCUNHO</option>
            <option value="aprovada">COM_CRM_CAMPANHA_STATUS_APROVADA</option>
            <option value="em_envio">COM_CRM_CAMPANHA_STATUS_EM_ENVIO</option>
            <option value="finalizada">COM_CRM_CAMPANHA_STATUS_FINALIZADA</option>
            <option value="pausada">COM_CRM_CAMPANHA_STATUS_PAUSADA</option>
        </field>
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="chzn-color-state"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
            name="groups"
            type="sql"
            label="COM_CRM_LEAD_GROUPS_LABEL"
            description="COM_CRM_CAMPANHA_GROUPS_DESC"
            multiple="true"
            query="SELECT id, nome FROM #__crm_lead_groups WHERE state = 1 ORDER BY nome"
            key_field="id"
            value_field="nome"
            required="true"
            >
        </field>
    </fieldset>
</form>

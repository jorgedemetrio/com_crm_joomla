<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_CAMPANHA_FIELD_NOME_LABEL"
            required="true"
            size="40"
        />
        <field
            name="status"
            type="list"
            label="COM_CRM_CAMPANHA_FIELD_STATUS_LABEL"
            default="rascunho"
            >
            <option value="rascunho">COM_CRM_CAMPANHA_STATUS_RASCUNHO</option>
            <option value="aprovada">COM_CRM_CAMPANHA_STATUS_APROVADA</option>
            <option value="em_envio">COM_CRM_CAMPANHA_STATUS_EM_ENVIO</option>
            <option value="finalizada">COM_CRM_CAMPANHA_STATUS_FINALIZADA</option>
            <option value="pausada">COM_CRM_CAMPANHA_STATUS_PAUSADA</option>
        </field>
        <field
            name="state"
            type="list"
            label="JSTATUS"
            default="1"
            class="custom-select"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
    <fieldset name="groups" label="COM_CRM_CAMPANHA_GROUPS_LABEL">
        <field
            name="groups"
            type="sql"
            label="COM_CRM_CAMPANHA_FIELD_GROUPS_LABEL"
            description="COM_CRM_CAMPANHA_FIELD_GROUPS_DESC"
            multiple="true"
            query="SELECT id, nome FROM #__crm_lead_groups WHERE state = 1 ORDER BY nome"
            key_field="id"
            value_field="nome"
            required="true"
        />
    </fieldset>
</form>

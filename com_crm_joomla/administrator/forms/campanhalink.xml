<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            readonly="true"
            class="readonly"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_CAMPANHALINK_FIELD_NOME_LABEL"
            required="true"
            size="40"
        />
        <field
            name="url_destino"
            type="url"
            label="COM_CRM_CAMPANHALINK_FIELD_URL_DESTINO_LABEL"
            required="true"
            size="50"
        />
        <field
            name="campanha_id"
            type="sql"
            label="COM_CRM_CAMPANHALINK_FIELD_CAMPANHA_ID_LABEL"
            query="SELECT id, nome FROM #__crm_campanhas WHERE state = 1 ORDER BY nome"
            key_field="id"
            value_field="nome"
            required="true"
            >
            <option value="">COM_CRM_CAMPANHALINK_SELECT_CAMPANHA</option>
        </field>
        <field
            name="state"
            type="list"
            label="JSTATUS"
            default="1"
            class="custom-select"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>

        <field
            name="id"
            type="hidden"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_FIELD_NOME_LABEL"
            description="COM_CRM_GRUPOLEAD_FIELD_NOME_DESC"
            required="true"
            size="40"
            class="inputbox"
        />
        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="chzn-color-state"
            size="1"
            default="1">

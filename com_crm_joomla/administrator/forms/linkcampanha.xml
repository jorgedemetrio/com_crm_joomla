<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="id"
            type="hidden"
        />
        <field
            name="nome"
            type="text"
            label="COM_CRM_LINKCAMPANHA_NOME_LABEL"
            description="COM_CRM_LINKCAMPANHA_NOME_DESC"
            required="true"
            size="40"
        />
        <field
            name="campanha_id"
            type="sql"
            label="COM_CRM_LINKCAMPANHA_CAMPANHA_ID_LABEL"
            description="COM_CRM_LINKCAMPANHA_CAMPANHA_ID_DESC"
            query="SELECT id, nome FROM #__crm_campanhas WHERE state = 1 ORDER BY nome"
            key_field="id"
            value_field="nome"
            required="true"
            >
            <option value="">COM_CRM_SELECT_CAMPANHA</option>
        </field>
        <field
            name="url_destino"
            type="url"
            label="COM_CRM_LINKCAMPANHA_URL_DESTINO_LABEL"
            description="COM_CRM_LINKCAMPANHA_URL_DESTINO_DESC"
            required="true"
            size="50"
        />
         <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="chzn-color-state"
            size="1"
            default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>
